!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Taskboard
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
    %meta{:content => "width=device-width,initial-scale=1.0", :name => "viewport"}/
  %body
  = link_to 'TaskBoards' , root_path,class:'boards'
  %hr.style1
  - if user_signed_in?
    %div.dropdown
      = image_tag 'prof-avatar.png',class:'png dropbtn'
      %div.dropdown-content
        %ul
          %li
            = link_to 'Sign out' , destroy_user_session_path, data:{ method: 'delete' }
          %li 
            = link_to 'Sign up' , new_user_registration_path
  - else
    = link_to 'Sign in' ,new_user_session_path,class:"login-btn"
  - if !current_page?(root_path)
    .back-btn
      = link_to :back do
        = image_tag 'back-btn.png',class:"back-btn"
  - if flash.present?
    .flash
      - flash.each do |key, value|
        %div{:class => key}= value
  = yield
  
