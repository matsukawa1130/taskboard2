%h2.app-sub-title Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :email,class: "email"
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email",class: "emailbox"
  .field
    = f.label :password,class: "password"
    - if @minimum_password_length
      %em
        
    %br/
    = f.password_field :password, autocomplete: "new-password",class:"passwordbox"
  .field
    = f.label :password_confirmation,class: "pass-conf"
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password",class:"pass-confbox"
  .actions
    = f.submit "Submit",class:"submit-btnnnn"
